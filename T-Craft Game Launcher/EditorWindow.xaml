<Window x:Class="T_Craft_Game_Launcher.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T_Craft_Game_Launcher"
        mc:Ignorable="d"
        Title="EditorWindow"
        Height="450"
        Width="800">
    <Grid>
        <RichTextBox x:Name="codeBox"
             Margin="10"
             FontFamily="Consolas"
             FontSize="14"
             IsReadOnly="True"
             SpellCheck.IsEnabled="False"
             PreviewTextInput="codeBox_PreviewTextInput"
             PreviewKeyDown="codeBox_PreviewKeyDown" />
    </Grid>
</Window>
