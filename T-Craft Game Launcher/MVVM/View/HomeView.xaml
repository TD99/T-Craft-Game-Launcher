<UserControl
    x:Class="T_Craft_Game_Launcher.MVVM.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:T_Craft_Game_Launcher.MVVM.Animations"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:T_Craft_Game_Launcher.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <b:Interaction.Behaviors>
        <animations:SlideInOutAnimation />
    </b:Interaction.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="homeOverview"
            Grid.Row="0"
            Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,20"
                HorizontalAlignment="Left"
                FontSize="28"
                Foreground="White"
                Text="Home" />

            <Border
                x:Name="discoverBorder"
                Grid.Row="1"
                Grid.Column="0"
                Height="180"
                BorderThickness="0"
                CornerRadius="10"
                MouseDown="discoverEvent">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            Margin="20,10,20,0"
                            FontSize="32"
                            Text="Öffentliche Spiele" />
                        <TextBlock
                            Margin="20,10,20,0"
                            FontSize="21"
                            Text="Spiele entdecken und herunterladen" />
                    </StackPanel>
                </Grid>

                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush
                                            ImageSource="/Assets/Images/banner1.png"
                                            Opacity="0.4"
                                            Stretch="UniformToFill" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush
                                            ImageSource="/Assets/Images/banner1.png"
                                            Opacity="0.5"
                                            Stretch="UniformToFill" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>


        </Grid>

        <Grid
            x:Name="appletView"
            Grid.Row="1"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button
                x:Name="webViewBackButton"
                Grid.Row="0"
                Height="30"
                Click="webViewBackButton_Click"
                Content="Back"
                Style="{StaticResource ModernButton}" />
            <wv2:WebView2
                Name="webView"
                Grid.Row="1"
                Margin="0,20"
                Source="https://tcraft.link/tclauncher/api/plugins/applet-loader/" />
        </Grid>

        <ListView
            x:Name="mainApplets"
            Grid.Row="1"
            Margin="0,0,0,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                        x:Name="AppletItem"
                        Width="312"
                        Height="150"
                        Background="#88000000"
                        BorderThickness="0"
                        MouseDown="AppletItem_MouseDown">
                        <Border.Clip>
                            <RectangleGeometry
                                RadiusX="10"
                                RadiusY="10"
                                Rect="0, 0, 312, 150" />
                        </Border.Clip>

                        <Grid>
                            <Image
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                gif:ImageBehavior.AnimatedSource="{Binding CoverURL}"
                                RenderTransformOrigin="0.5,0.5"
                                Source="{Binding CoverURL}"
                                Stretch="UniformToFill">
                                <Image.OpacityMask>
                                    <SolidColorBrush Opacity="0.5" Color="Black" />
                                </Image.OpacityMask>
                            </Image>

                            <StackPanel Margin="20">
                                <TextBlock
                                    Margin="20,10,20,0"
                                    FontSize="28"
                                    Foreground="White"
                                    Text="{Binding Title}" />
                                <TextBlock
                                    Margin="20,10,20,0"
                                    FontSize="16.4"
                                    Foreground="White"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="SnapsToDevicePixels" Value="True" />
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border
                                    Name="Border"
                                    Padding="0,0,10,0"
                                    Background="Transparent"
                                    SnapsToDevicePixels="true">
                                    <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="OpacityMask">
                                            <Setter.Value>
                                                <SolidColorBrush Opacity="0.3" Color="Black" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="OpacityMask">
                                            <Setter.Value>
                                                <SolidColorBrush Opacity="0.8" Color="Black" />
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding is_action}" Value="True">
                                        <Setter Property="Cursor" Value="Hand" />
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Border
            Grid.Row="2"
            Background="#2a384b"
            CornerRadius="15">
            <Grid Height="50" Margin="30,10,30,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox
                    x:Name="profileSelect"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    DisplayMemberPath="DisplayName"
                    ItemsSource="{Binding LocalList}"
                    SelectedItem="{Binding LastSelected}"
                    SelectedValuePath="Guid"
                    SelectionChanged="profileSelect_SelectionChanged" />

                <TextBlock
                    x:Name="profileNoneText"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    FontSize="15"
                    Foreground="#5b8dc1"
                    MouseDown="discoverEvent"
                    Text="Instanzen installieren"
                    TextDecorations="Underline"
                    Visibility="Collapsed" />

                <Button
                    x:Name="playBtn"
                    Grid.Column="1"
                    Click="playBtn_Click"
                    Content="Spielen"
                    FontSize="20"
                    FontWeight="Medium"
                    Style="{StaticResource ModernButton}" />
                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <StackPanel.ToolTip>
                        <ToolTip Background="Transparent" Placement="Top">
                            <Border
                                Padding="10"
                                Background="#BB0E1218"
                                CornerRadius="20">
                                <Image
                                    x:Name="imageBodyPicture"
                                    Width="100"
                                    Height="200" />
                            </Border>
                            <ToolTip.Style>
                                <Style BasedOn="{StaticResource ModernToolTip}" TargetType="{x:Type ToolTip}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Source={x:Reference imageBodyPicture}, Path=Source}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ToolTip.Style>
                        </ToolTip>
                    </StackPanel.ToolTip>
                    <Image
                        x:Name="imageUserPicture"
                        Width="16"
                        Height="16"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Name="textUserName"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="Anonym" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
