<UserControl x:Class="T_Craft_Game_Launcher.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:T_Craft_Game_Launcher.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Home"
                       Foreground="White"
                       FontSize="28"
                       HorizontalAlignment="Left"
                       Margin="0, 0, 0, 20" />
        
            <StackPanel Orientation="Horizontal"
                        Margin="0, 0, 0, 20">
                <Border x:Name="discoverBorder"
                        Width="400"
                        Height="200"
                        BorderThickness="0"
                        Background="#88000000"
                        MouseDown="discoverBorder_MouseDown">

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                           RadiusY="10"
                                           Rect="0, 0, 400, 200" />
                    </Border.Clip>

                    <Grid>
                        <Image Stretch="UniformToFill"
                               Source="/Images/banner1.png"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.OpacityMask>
                                <SolidColorBrush Color="Black" Opacity="0.5"/>
                            </Image.OpacityMask>
                        </Image>

                        <StackPanel>
                            <TextBlock Text="Öffentliche Spiele"
                                       Foreground="White"
                                       FontSize="28"
                                       Margin="20,10,20,0" />
                            <TextBlock Text="Spiele entdecken und herunterladen"
                                       Foreground="White"
                                       FontSize="18"
                                       Margin="20,10,20,0" />
                        </StackPanel>
                    </Grid>

                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="OpacityMask">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Black" Opacity="0.8"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                <Border Width="200"
                        Height="200"
                        Margin="25, 0, 0, 0"
                        BorderThickness="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#5BC3FF" Offset="0" />
                            <GradientStop Color="#2E80CC" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                           RadiusY="10"
                                           Rect="0, 0, 200, 200" />
                    </Border.Clip>

                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Tipp"
                                       Foreground="White"
                                       FontSize="28"
                                       Margin="20,10,20,0" />
                            <TextBlock Text="Klicke auf 'Profile', um ein neues Profil herunterzuladen."
                                       TextWrapping="Wrap"
                                       Foreground="White"
                                       FontSize="16.4"
                                       Margin="20,10,20,0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>

        <Border Background="#2a384b"
                CornerRadius="15"
                Grid.Row="1">
            <Grid Height="50"
                  Margin="30, 10, 30, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="profileSelect"
                          ItemsSource="{Binding LocalList}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Guid"
                          Grid.Column="0"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          SelectedIndex="0" />

                <Button x:Name="playBtn"
                        Content="Spielen"
                        FontSize="20"
                        FontWeight="Medium"
                        Grid.Column="1"
                        Click="playBtn_Click"
                        Style="{StaticResource ModernButton}" />
                <TextBlock Text="Anonym"
                           Foreground="White"
                           FontSize="15"
                           Grid.Column="2"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
