<Window x:Class="T_Craft_Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T_Craft_Game_Launcher"
        xmlns:viewModel="clr-namespace:T_Craft_Game_Launcher.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600"
        Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Images/logo.png"
        StateChanged="Window_StateChanged"
        Title="TCLauncher"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        KeyDown="MainWindow_OnKeyDown">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid>
            <Image x:Name="loadingImg"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Images/logo.png"
                   Panel.ZIndex="99"
                   MouseDown="loadingImg_MouseDown" />
        </Grid>

        <Border x:Name="mainBorder"
                BorderBrush="#10FFFFFF"
                BorderThickness="2"
                Background="#1d2633"
                CornerRadius="20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <Border x:Name="topDrag"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        Background="Transparent"
                        Panel.ZIndex="-1"
                        MouseLeftButtonDown="TopDrag_OnMouseLeftButtonDown"
                        MouseLeftButtonUp="TopDrag_OnMouseLeftButtonUp"/>

                <Grid Grid.Row="1"
                      Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="logo"
                           Source="/Images/logo.png"
                           Grid.Row="0"
                           Grid.Column="0"
                           MouseDown="Logo_MouseDown" />
                    <TextBlock x:Name="AppName"
                               Text="TCLauncher"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Foreground="#D3DBF2"
                               FontWeight="Medium"
                               FontSize="22"
                               Grid.Row="0"
                               Grid.Column="2" />
                </Grid>

                <StackPanel Grid.Column="1"
                            Grid.Row="2">
                    <RadioButton x:Name="homeBtn"
                                 Content="Home"
                                 Style="{StaticResource MenuButtonTheme}"
                                 IsChecked="True"
                                 Command="{Binding HomeViewCommand}" />
                    <RadioButton x:Name="serverBtn"
                                 Content="Profile"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding ServerListViewCommand}"
                                 ToolTipService.IsEnabled="False">
                        <RadioButton.ToolTip>
                            <ToolTip x:Name="newToolTip"
                                     Placement="Left"
                                     Style="{StaticResource ModernToolTip}"
                                     Background="#84caf4"
                                     StaysOpen="False">
                                <ToolTip.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="← Instanzen installieren"
                                                   Foreground="Black" />
                                    </StackPanel>
                                </ToolTip.Content>
                            </ToolTip>
                        </RadioButton.ToolTip>
                    </RadioButton>
                    <RadioButton x:Name="settingsBtn"
                                 Content="Einstellungen"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding SettingsViewCommand}" />
                </StackPanel>

                <Grid Grid.Column="2"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--<TextBox HorizontalAlignment="Left"
                         Style="{StaticResource ModernTextBox}"
                         Margin="15, 0, 0, 0"
                         Grid.Column="0"
                         Grid.Row="0" />-->
                    <Border x:Name="connectionBorder"
                            CornerRadius="10"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="15, 0, 0, 0"
                            Padding="10"
                            Grid.Column="0"
                            Grid.Row="0"
                            MouseDown="connectionBorder_MouseDown">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="connectionIndicator"
                                     Width="6"
                                     Height="6"
                                     Fill="Red" />
                            <TextBlock x:Name="connectionStatus"
                                       Text="Connection"
                                       Foreground="White"
                                       FontSize="15"
                                       VerticalAlignment="Center"
                                       Margin="10, 0, 0, 0" />
                        </StackPanel>
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#88000000" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="0">
                        <Button x:Name="minimizeBtn"
                                Click="minimizeBtn_Click"
                                Style="{StaticResource WindowControlButton}"
                                Height="34">
                            <Button.Content>
                                <Canvas Width="24" Height="24">
                                    <Path Data="M19,11 L5,11 A1,1,0,0,0,5,13 L19,13 A1,1,0,0,0,19 11 Z" Fill="#FFFFFF"/>
                                </Canvas>
                            </Button.Content>
                        </Button>
                        <Button x:Name="maximizeBtn"
                                Click="maximizeBtn_Click"
                                Style="{StaticResource WindowControlButton}"
                                Height="30">
                            <Button.Content>
                                <Canvas Width="24" Height="24">
                                    <Path Data="M17,2 L7,2 A5,5,0,0,0,2,7 L2,17 A5,5,0,0,0,7,22 L17,22 A5,5,0,0,0,22 17 L22 7 A5 5 0 0 0 17 2 Z M20 17 A3 3 0 0 1 17 20 L7 20 A3 3 0 0 1 4 17 L4 7 A3 3 0 0 1 7 4 L17 4 A3 3 0 0 1 20 7 Z" Fill="#FFFFFF"/>
                                </Canvas>
                            </Button.Content>
                        </Button>
                        <Button x:Name="closeBtn"
                                Click="closeBtn_Click"
                                Style="{StaticResource WindowControlButton}"
                                Height="34">
                            <Button.Content>
                                <Canvas Width="24" Height="24">
                                    <Path Data="M13.41,12 L19.71,5.71 A1,1,0,1,0,18.29,4.29 L12,10.59 L5.71,4.29 A1,1,0,0,0,4.29,5.71 L10.59,12 L4.29,18.29 A1,1,0,0,0,5.71,19.71 L12,13.41 L18.29,19.71 A1,1,0,0,0,19.71 18.29 Z" Fill="#FFFFFF"/>
                                </Canvas>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                </Grid>

                <ContentControl Grid.Column="2"
                                Grid.Row="2"
                                Margin="15"
                                Content="{Binding CurrentView}"
                                Focusable="False" />
            </Grid>
        </Border>
    </Grid>
</Window>
