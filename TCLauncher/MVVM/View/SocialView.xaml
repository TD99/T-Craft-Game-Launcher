            <TabItem Header="Freunde">
                <Border
                    Padding="20"
                    Background="#33000000"
                    CornerRadius="10">
                    <Grid>
                        <ListView
                            x:Name="FriendsList"
                            Background="Transparent"
                            BorderThickness="0">
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Click="MenuItem_Delete_Click" Header="Remove" />
                                </ContextMenu>
                            </ListView.ContextMenu>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Image on the left  -->
                                        <Image
                                            Width="64"
                                            Height="64"
                                            Source="{Binding ImageSource}" />

                                        <!--  Nickname and real name  -->
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="10,0"
                                            VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Nickname}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="White"
                                                Text="{Binding Name}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Name}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Button
                            x:Name="AddFriendButton"
                            Margin="0,10,0,0"
                            Padding="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Click="AddFriendButton_Click"
                            Content="Hinzufügen"
                            Style="{StaticResource ModernButton}" />
                    </Grid>
                </Border>
            </TabItem>
            <TabItem Header="Einladungen">
                <Border
                    Padding="20"
                    Background="#33000000"
                    CornerRadius="10">
                    <Grid>
                        <ListView
                            x:Name="FriendRequestsList"
                            Background="Transparent"
                            BorderThickness="0">
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Click="MenuItemRequests_Accept_Click" Header="Annehmen" />
                                    <MenuItem Click="MenuItemRequests_Reject_Click" Header="Ablehnen" />
                                </ContextMenu>
                            </ListView.ContextMenu>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Image on the left  -->
                                        <Image
                                            Width="64"
                                            Height="64"
                                            Source="{Binding ImageSource}" />

                                        <!--  Nickname and real name  -->
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="10,0"
                                            VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Nickname}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="White"
                                                Text="{Binding Name}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Name}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </TabItem>
            <TabItem Header="Anfragen">
                <Border
                    Padding="20"
                    Background="#33000000"
                    CornerRadius="10">
                    <Grid>
                        <ListView
                            x:Name="FriendRequestsFromList"
                            Background="Transparent"
                            BorderThickness="0">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Image on the left  -->
                                        <Image
                                            Width="64"
